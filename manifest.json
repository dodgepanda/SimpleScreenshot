{
	"name": "Simple Screenshots",
	"version": "1.0",
	"description": "Very simple screenshot extension",
	"background": {
		"persistent": false,
		"scripts": ["background.js"]
	},
	"content_scripts": [ {
		"css": [ "jquery-ui.min.css", "simpleScreenshots.css" ],
		"js": [ "jquery.js", "jquery-ui.min.js", "simpleScreenshots_content.js" ],
		"matches": [ "<all_urls>" ],
		"all_frames": true
	} ],
	"browser_action": {
		"default_icon": "camera.png",
		"default_title": "Take a screen shot!"
	},
	"permissions": [
		"tabs",
		"<all_urls>"
	],
	"commands": {
		"toggle-feature-overlay": {
			"suggested_key": {
				"default": "Ctrl+Shift+Q",
				"mac": "Command+Shift+Q"
			},
			"description": "Toggle Overlay"
		},
		"take-screenshot": {
			"suggested_key": {
				"default": "Ctrl+Shift+X",
				"mac": "Command+Shift+X"
			},
			"description": "Take Screenshot"
		},
		"debug": {
			"suggested_key": {
				"default": "Ctrl+Shift+Z",
				"mac": "Command+Shift+Z"
			},
			"description": "Debug"
		}
	},
	"manifest_version": 2
}
